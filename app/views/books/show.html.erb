<div class="container">
  <div class="row">

	<div class= "col-xs-3">
		<h2>User info</h2>

<table class="table">
		<tr><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

		<tr>
			<th>name</th>
			<th><%= @book.user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= @book.user.introduction %></th>
		</tr>
</table>

	<%= link_to "",edit_user_path(@book.user.id), class: "col-xs-10 btn btn-default glyphicon glyphicon-wrench" %><br>


		<h2>New book</h2>
		<%= form_for @book_new, url: books_path do |f| %>
	<div class="field row">
		<%= f.label :title,class: "col-xs-10" %>
		<%= f.text_field :title,class: "col-xs-10" %>
	</div>

	<div class="field row">
		<%= f.label  :body, class: "col-xs-10" %> <!-- ここを変更 -->
		<%= f.text_area :body,class: "col-xs-10" %>
	</div>

	<div class="actions row">
		<%= f.submit "create book", class: "col-xs-10 btn btn-primary" %>
	</div>
  <% end %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user_id) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg",size:'100x100',format: "no_image-mini.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					 <% if @book.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)",method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>
					<% end %>
				</tr>
			</table>

	</div>
</div>

